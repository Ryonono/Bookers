<% if flash[:notice] %>
  <p style="color: #00ff00;"><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>

<table>
  <tr>
    <th width="200">Title</th>
    <th width="500">Body</th>
    <% @books.each do |book| %>
  </tr>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book) %></td>
    <td><%= link_to "Edit", edit_book_path(book) %></td>
    <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>


<h3>New Book</h3>

<%= form_with model:@book, local:true do |f| %>
<%= render 'error_form', locals: { book: @book } %>

<h4>Title</h4>

<%= f.text_field :title %>

<h4>Body</h4>

<%= f.text_area :body %><br>

<%= f.submit 'Create Book' %>

<% end %>