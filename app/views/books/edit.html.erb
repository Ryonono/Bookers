<h3>Editing Book</h3>

<%= form_with model:@book, local:true do |f| %>
<%= render 'error_form', locals: { book: @book } %>

<h4>Title</h4>

<%= f.text_field :title %>

<h4>Body</h4>

<%= f.text_area :body %>

<br>

<%= f.submit 'Update Book' %>

<br>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>

<% end %>